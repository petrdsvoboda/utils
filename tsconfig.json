{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"esnext",
			"dom"
		],
		"rootDir": "src",
		"outDir": "lib",
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		"lib",
		"**/__tests__"
	]
}